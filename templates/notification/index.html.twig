{% extends 'base.html.twig' %}

{% block title %}
    {{ parent()}}
    Mes Notifications
{% endblock %}

{% block body %}

    <div class="container my-2">
        <h1>Mes notifications</h1>
        {% for n in notification %}
            <div class="card my-2">
                <div class="p-4 d-flex align-items-center justify-content-start ">
                    <span style="width: 12px; height: 12px; background-color: var(--success); border-radius: 50%;" class="mx-2"></span>
                    {{ n.message | raw }}, reçu le {{ n.createdAt | date('d F Y à H:i') }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

