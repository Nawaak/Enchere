{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    Mon Compte
{% endblock %}

{% block body %}
    <div class="profile">
        <div class="container">
            <div class="profile-header py-3">
                <div class="d-flex align-items-center justify-content-between text-left">
                    <h1 style="font-size: 3em;">Mon Compte</h1>
                     <button class="burger pl-0 pr-0 border-0 bg-transparent" type="button">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-list" fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-left">
                    <div class="d-flex align-items-center py-4 col-left-body">
                        <img src="/image/profile/default.png" class="rounded-circle" alt="avatar">
                        <div class="pl-3">
                            Brandon, <br>
                            <span class="text-muted font-italic" style="font-size: 0.8em; display: inline-block; transform: translateY(-8px)">Inscrit il y a 2 ans </span>
                        </div>
                    </div>
                </div>

                <div class="col-md-9 p-0">
                    <div class="profile-menu">
                        <ul>
                            <li class="active">
                                <a href="">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-card-text" viewBox="0 0 16 16">
                                        <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                        <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                                    </svg>
                                    Mes annonces
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-archive" viewBox="0 0 16 16">
                                        <path d="M0 2a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 12.5V5a1 1 0 0 1-1-1V2zm2 3v7.5A1.5 1.5 0 0 0 3.5 14h9a1.5 1.5 0 0 0 1.5-1.5V5H2zm13-3H1v2h14V2zM5 7.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                                    </svg>
                                    Mes Informations
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                         class="bi bi-person" viewBox="0 0 16 16">
                                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                                    </svg>
                                    Editer mon compte
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="profile-body">
                        <div class="d-flex align-items-center justify-content-between py-4">
                            <h3 class="mb-0">Mes annonces</h3>
                            <a href="{{ path('bidding_create') }}" class="btn btn-info btn-sm"> Déposer une annonce</a>
                        </div>
                        <div class="row">
                            {% for b in bidding %}
                                <div class="col-12 col-lg-6 mb-3 pl-0">
                                    <div class="card">
                                        <div class="card-image">
                                            <count-time expire="{{ b.expireAt | date('Y-m-d H:i:s') }}"
                                                        id="{{ b.id }}"></count-time>
                                            <img src="{{ b.image }}" alt="img" class="w-100 rounded-top">
                                        </div>
                                        <div class="bg-white py-2 text-center border-top border-bottom">
                                            Offre en cours:
                                            {% if b.expireAt | date > "now" | date %}
                                                <span class="font-weight-bold text-success">
                                                Terminé
                                            </span>
                                            {% else %}
                                                <span class="font-weight-bold text-danger">
                                                {{ findLastPrice(b)[0].price }}€
                                            </span>
                                            {% endif %}
                                        </div>
                                        <div class="card-body rounded-bottom">
                                            <h5>{{ b.name | capitalize }}</h5>
                                            <p>{{ b.content | slice(0,86) }}..</p>
                                            <p>Prix de départ: <span class="text-danger">{{ b.startPrice }} €</span></p>
                                            <div class="d-flex justify-content-end align-items-center card-body-action">
                                                <a href="{{ path('bidding_show', {bidding: b.id}) }}"
                                                   class="btn btn-sm btn-info">En savoir +</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
